<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="MainActivity"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:id="@+id/registerBroadcastReceiver"
        android:text="Register"
        android:onClick="registerBroadcastReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="138dp" />

    <Button
        android:id="@+id/unregisterBroadcastReceiver"
        android:text="Unregister"
        android:onClick="unregisterBroadcastReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registerBroadcastReceiver"
        android:layout_alignBottom="@+id/registerBroadcastReceiver"
        android:layout_toEndOf="@+id/title" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="TextView" />

</RelativeLayout>
